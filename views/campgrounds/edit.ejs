<%- include("../partials/header") %>

<section class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit: <%= campground.name %></h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step=0.01 required>
				</div>
				<div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
				<div class="form-group">
					<textarea class="form-control" name="campground[description]" required><%= campground.description %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
				</div>
			</form>
		</div>
	</div>
	<p style="text-align: center;">
		<a href="/campgrounds">Go back</a>
	</p>
</section>

<%- include("../partials/footer") %>