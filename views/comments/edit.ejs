<%- include("../partials/header") %>

<section class="container">
	<div class="row">
		<h1 style="text-align: center;">
				Edit comment
		</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Update</button>
				</div>
			</form>
		</div>
	</div>
	<p style="text-align: center;">
		<a href="/campgrounds">Go back</a>
	</p>
</section>

<%- include("../partials/footer") %>